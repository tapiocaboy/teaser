# =============================================================================
# Echo Voice Agent - Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region   = "ap-southeast-2"
environment  = "dev"
project_name = "echo"

# DynamoDB Configuration
dynamodb_billing_mode   = "PAY_PER_REQUEST"  # Or "PROVISIONED"
dynamodb_read_capacity  = 5                   # Only for PROVISIONED mode
dynamodb_write_capacity = 5                   # Only for PROVISIONED mode

# S3 Configuration
s3_force_destroy    = true   # Set to false in production
audio_retention_days = 30    # Days to keep audio files

# Lambda Configuration
lambda_memory_size = 512     # MB
lambda_timeout     = 60      # seconds
lambda_runtime     = "python3.11"

# Bedrock Configuration
bedrock_model_id = "arn:aws:bedrock:ap-southeast-2:058264223017:inference-profile/au.anthropic.claude-haiku-4-5-20251001-v1:0"
# Other options:
# - anthropic.claude-3-sonnet-20240229-v1:0
# - anthropic.claude-3-haiku-20240307-v1:0 (faster, cheaper)
# - amazon.titan-text-express-v1 (AWS native)

# Polly Configuration
polly_voice_id = "Joanna"    # US English female
polly_engine   = "neural"    # "standard" or "neural"
# Other popular voices:
# - Matthew (US English male)
# - Amy (British English female)
# - Brian (British English male)

# API Gateway Configuration
api_throttling_rate_limit  = 100   # requests per second
api_throttling_burst_limit = 200   # burst capacity

# Frontend Configuration
domain_name = ""             # Leave empty to use CloudFront default domain
enable_waf  = false          # Enable AWS WAF protection

# Monitoring Configuration
enable_detailed_monitoring = true
log_retention_days         = 14    # CloudWatch logs retention
alarm_email                = ""    # Email for alarm notifications

